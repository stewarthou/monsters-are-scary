    "istanbul": "^0.4.5",
    "mocha": "^5.2.0",
    "node-mocks-http": "^1.7.0",
    "standard": "^11.0.1"
  },
  "dependencies": {
    "config": "^1.30.0",
    "debug": "^3.1.0",
    "express": "^4.16.3",
    "node-fetch": "^2.1.2"
